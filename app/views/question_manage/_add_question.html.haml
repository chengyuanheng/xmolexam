#add_questions.modal.fade(tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
  .modal-dialog
    .modal-content
      =form_tag('/question_manage/add_question',:method=>'post',:class=>"form-horizontal") do
        .modal-header
          %button(type="button" class="close" data-dismiss="modal" aria-hidden="true") &times
          %h4(class="modal-title" id="myModalLabel") 添加
        .modal-body.add_question
          .form-group
            %label.col-sm-2.control-label 选择考期
            .col-sm-10
              = select_tag "exam_date_id", options_for_select([""]+@exam_date), :class=>"form-control"
          .form-group
            %label.col-sm-2.control-label 科目
            .col-sm-10
              = select_tag "subject_id", options_for_select([""]+@subjects), :class=>"form-control", :onchange=>"select_section('add_question', #{@subject_section})"
          .form-group
            %label.col-sm-2.control-label SECTION
            .col-sm-10
              = select_tag "section", options_for_select([]), :class=>"form-control"
          .form-group
            %label.col-sm-2.control-label 题目
            .col-sm-10
              %textarea.form-control(rows="3" name="question")
          .form-group
            %label.col-sm-2.control-label 答案A
            .col-sm-6
              %input.form-control(name="answer_A")
            .col-sm-3
              .radio
                %label.label-gray.label-unselect
                  %input(type="radio" name="right_answer" onclick="select_radio(this)" value="A")
                  %span 设为正确答案
          .form-group
            %label.col-sm-2.control-label 答案B
            .col-sm-6
              %input.form-control(name="answer_B")
            .col-sm-3
              .radio
                %label.label-gray.label-unselect
                  %input(type="radio" name="right_answer" onclick="select_radio(this)" value="B")
                  %span 设为正确答案
          .form-group
            %label.col-sm-2.control-label 答案C
            .col-sm-6
              %input.form-control(name="answer_C")
            .col-sm-3
              .radio
                %label.label-gray.label-unselect
                  %input(type="radio" name="right_answer" onclick="select_radio(this)"  value="C")
                  %span 设为正确答案
          .form-group
            %label.col-sm-2.control-label 答案D
            .col-sm-6
              %input.form-control(name="answer_D")
            .col-sm-3
              .radio
                %label.label-gray.label-unselect
                  %input(type="radio" name="right_answer" onclick="select_radio(this)" value="D")
                  %span 设为正确答案
          .form-group
            %label.col-sm-2.control-label 答案E
            .col-sm-6
              %input.form-control(name="answer_E")
            .col-sm-3
              .radio
                %label.label-gray.label-unselect
                  %input(type="radio" name="right_answer" onclick="select_radio(this)" value="E")
                  %span 设为正确答案
        .modal-footer
          %button.btn.btn-primary.btn-lg(type="submit") 保存
          %a.btn.btn-default.btn-lg(data-dismiss="modal") 取消
